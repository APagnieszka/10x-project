---
import "../styles/global.css";
import Header from "../components/Header.astro";

interface Props {
  title?: string;
}

const { title = "Foodzilla" } = Astro.props;

// Check for authenticated user (safer than relying on session data from cookies)
const {
  data: { user },
} = await Astro.locals.supabase.auth.getUser();

// Get household data if user is authenticated
let householdName: string | undefined;
let userEmail: string | undefined;
if (user) {
  userEmail = user.email ?? undefined;
  const { data: householdData } = await Astro.locals.supabase
    .from("user_households")
    .select("household_id, households(name)")
    .eq("user_id", user.id)
    .single();

  // Supabase returns nested data as an object, not an array
  if (householdData?.households) {
    householdName = (householdData.households as { name: string }).name;
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {userEmail && <Header userEmail={userEmail} householdName={householdName} />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
