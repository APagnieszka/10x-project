---
import Layout from "@/layouts/Layout.astro";
import { ShoppingListPageIsland } from "@/components/ShoppingListPageIsland";

const supabase = Astro.locals.supabase;
const {
  data: { session },
  error: authError,
} = await supabase.auth.getSession();

if (authError || !session) {
  return Astro.redirect("/login");
}

const pageTitle = "Lista zakupów - Foodzilla";
---

<Layout title={pageTitle}>
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8 max-w-3xl">
      <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-tight mb-2">Lista zakupów</h1>
        <p class="text-muted-foreground">Produkty oznaczone jako do kupienia.</p>
      </header>

      <ShoppingListPageIsland client:load />
    </div>
  </main>
</Layout>
