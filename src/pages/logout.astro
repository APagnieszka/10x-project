---
import Layout from "@/layouts/Layout.astro";

// Page metadata
const pageTitle = "Sign Out - Foodzilla";
const pageDescription = "You have been signed out of your Foodzilla account.";
---

<Layout title={pageTitle}>
  <main class="min-h-screen bg-background flex items-center justify-center px-4">
    <div class="w-full max-w-md text-center">
      <h1 class="text-2xl font-bold mb-4">Signed Out</h1>
      <p class="text-muted-foreground mb-6">You have been successfully signed out of your account.</p>
      <a href="/" class="text-primary hover:underline"> Return to Home </a>
    </div>
  </main>
</Layout>
