---
import Layout from "@/layouts/Layout.astro";
import { AuthFormIsland } from "@/components/AuthFormIsland";

// Page metadata
const pageTitle = "Reset Password - Foodzilla";
const _pageDescription = "Reset your password to regain access to your Foodzilla account.";
---

<Layout title={pageTitle}>
  <main class="min-h-screen bg-background flex items-center justify-center px-4">
    <div class="w-full max-w-md">
      <AuthFormIsland mode="reset" client:load />
    </div>
  </main>
</Layout>
