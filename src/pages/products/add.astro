---
import Layout from "@/layouts/Layout.astro";
import { AddProductPageIsland } from "@/components/AddProductPageIsland";

// Check authentication
const supabase = Astro.locals.supabase;
const {
  data: { user },
  error: authError,
} = await supabase.auth.getUser();

if (authError || !user) {
  // Redirect to login if not authenticated
  return Astro.redirect("/login");
}

// Page metadata
const pageTitle = "Dodaj produkt - Foodzilla";
const pageDescription =
  "Dodaj nowy produkt do domowej spiżarni: zeskanuj kod kreskowy, zrób zdjęcie daty ważności albo wpisz dane ręcznie.";
---

<Layout title={pageTitle}>
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8 max-w-2xl">
      <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-tight mb-2">Dodaj produkt</h1>
        <p class="text-muted-foreground">
          {pageDescription}
        </p>
      </header>

      <AddProductPageIsland client:load />
    </div>
  </main>
</Layout>
